<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#C036"
                android:endColor="#C000"
                android:type="linear"
                android:angle="315"
                />
            <stroke android:width="4dp" android:color="#E369" />
            <size android:width="64dp" android:height="64dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#C369"
                android:endColor="#C69C"
                android:type="linear"
                android:angle="315"
                />
            <stroke android:width="4dp" android:color="#E69C" />
            <size android:width="64dp" android:height="64dp" />
        </shape>
    </item>
</selector>

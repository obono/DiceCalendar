<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#C448"
                android:endColor="#C004"
                android:type="linear"
                android:angle="315"
                />
            <stroke android:width="4dip" android:color="#E448" />
            <size android:width="64dp" android:height="64dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#C224"
                android:endColor="#C88A"
                android:type="linear"
                android:angle="315"
                />
            <stroke android:width="4dip" android:color="#E88A" />
            <size android:width="64dp" android:height="64dp" />
        </shape>
    </item>
</selector>
